body,html{
    width:100%;
    height:100%;
    margin:0;
}
#main-canvas{
    width:100%;
    height:100%;
    background: #fff;
}

#layer-canvas{
    position:absolute;
    top:0;
    left:0;
}
.compo-con{
    position:absolute;
    top:0;
    left:0;
    display:none;
    width:0;
    height:0;
    border:1px dashed rgba(99,99,99,0);
}
.compo-canvas{
    position:absolute ;
    top:5px;
    left:5px;
    
}
#resize-control{
    position:absolute;
    left:0;
    right:0;
    display:none;
    z-index:10001;
}
.resizer{
    width:10px;
    height:5px;
    background:#ddd;
    border:1px solid #aaa;
    position: absolute !important;
}