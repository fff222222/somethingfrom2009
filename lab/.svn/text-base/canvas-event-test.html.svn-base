<script>
var $=MJ;
$.use("canvas.sprite.circle",function(){
    
    var can=new $.Canvas.core()
    can.init();
    can.canvas=$.Dom.get("#canvas");
    can.ctx=can.canvas.getContext("2d")
    can.begin();
    can.on("render",function(p){
     //   console.log("ss")
    })
    var eve=new $.Canvas.Event()
    eve.init(can);
    
    var circle=new $.Canvas.Sprite.Circle();
    circle._move=function(){
        this.pos.x+=1
    }
    circle.init();
    circle.r=100;
    eve.add(circle)
    can.addSprite(circle);
    circle.on("click",function(params){
        console.log(params.fire_param)
    })
    circle.on("mousemove",function(params){
        console.log(params.fire_param.offsetX)
    })
   
    
   // alert(eve)
    
})
</script>
