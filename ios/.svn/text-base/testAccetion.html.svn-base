<!DOCTYPE html>
<html>
    <head>
        <title></title>
       <meta id="viewport" name="viewport" content="user-scalable=no,initial-scale=1.0, maximum-scale=1.0"/>
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="apple-mobile-web-app-status-bar-style" content="black" />
        <link rel="apple-touch-icon" href="iphon_tetris_icon.png"/>
        <link rel="apple-touch-startup-image" href="startup.png" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    </head>
    <body>
        <script>
            var width=window.screen.availWidth;
            var height=window.screen.availHeight;
            var $=function(ele){
                return document.getElementById(ele)
            }
            navigator.geolocation.getCurrentPosition(function(e){
                console.log(e.coords)
                window.addEventListener("devicemotion",function(e){
              //  $("log").innerHTML=e.acceleration.x +"<br/>"
                var vx=e.acceleration.x.toFixed(4)
                var vy=-e.acceleration.y.toFixed(4)
                var vz=e.acceleration.z.toFixed(4)

                document.body.innerHTML+=vx+":"+vy+":"+vz+":"+"<br/>"
            })
            });
            
        </script>
    </body>
</html>
